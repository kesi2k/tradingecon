<!DOCTYPE html>
<html>
<head>
<title>My App</title>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
</head>
<body>
<h1>My App</h1>
<canvas id="myCanvas" width="300" height="300"></canvas>
<script>

var data1 = <%- JSON.stringify(mexico) %>;
var data2 = <%- JSON.stringify(sweden) %>;


var chart1 = new Chart(document.getElementById("myCanvas"), {
  type: "line",
  data: {
    labels: data1.map(function(d) { return d.year }),
    datasets: [
      {
        label: "Count",
        data: data1.map(function(d) { return d.value }),
        borderColor: "green",
      },
      {
        label: "Count",
        data: data2.map(function(d) { return d.value }),
        borderColor: "yellow",
      }
    ]
  },
  options: {
    scales: {
      x: {
        type: "linear",
        scaleLabel: {
          labelString: "Year"
        }
      },
      y: {
        type: "linear",
        scaleLabel: {
          labelString: "Count"
        }
      }
    }
  },
  width: "100%",
  height: "100%"
});

</script>
</body>
</html>
